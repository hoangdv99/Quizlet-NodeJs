<div class="pcoded-content">

    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-10">
                <div class="page-header-title">
                    <a href="/<%= user.username %>/<%= set.id %>" style="font-size: large; font-weight: bold;">< Back to set</a>
                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <% if(typeof(errors) !== "undefined"){ %>
                    <% errors.forEach(function(error){ %>
                    <div class="alert alert-danger icons-alert">
                        <p><%= error %></p>
                    </div>
                    <% })} %>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="card">

                                <div class="card-block">
                                    <form id="main" method="POST" action="/<%= set.id %>/edit">
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Title</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="title"
                                                    value="<%= set.title %>"
                                                    placeholder="Enter a title like Biology - Chapter 22: Evolution">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Description</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="description" class="form-control"
                                                    placeholder="Add a description" value="<%= set.description %>">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2">Visible</label>
                                            <div class="col-sm-10">
                                                <div class="form-radio">
                                                    <div class="radio radiofill radio-primary radio-inline">
                                                        <label>
                                                            <input type="radio" name="privacy" value=1
                                                                data-bv-field="member" checked>
                                                            <i class="helper"></i>Public
                                                        </label>
                                                    </div>
                                                    <div class="radio radiofill radio-primary radio-inline">
                                                        <label>
                                                            <input type="radio" name="privacy" value=2
                                                                data-bv-field="member">
                                                            <i class="helper"></i>Private
                                                        </label>
                                                    </div>
                                                </div>
                                                <span class="messages"></span>
                                            </div>
                                        </div>
                                        <% for(var i = 0; i < cards.length; i++){ %>
                                            <div class="card">
                                                <div class="card-block">
                                                    <div class="row align-items-end">
                                                        <div class="col-sm-5">
                                                            <input type="text" name="term" class="form-control"
                                                                placeholder="Term" value="<%= cards[i].term %>">
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" name="definition"
                                                                placeholder="Definition" value="<%= cards[i].definition %>">
                                                        </div>
    
                                                        <div class="col-sm-1">
                                                            <button
                                                                class="btn btn-sm waves-effect waves-dark btn-danger btn-danger remove-row"><i
                                                                    class="icofont icofont-trash"></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>

                                        <div class="add-rows"></div>
                                        <div class="row">
                                            <div class="col-sm-5"></div>
                                            <div class="col-sm-5">
                                                <button id="add-row" type="button"
                                                    class="btn waves-effect waves-light btn-success"><i
                                                        class="icofont icofont-plus"></i>ADD CARD</button>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <button type="submit"
                                                    class="btn-lg waves-effect waves-light btn-success btn-square btn-block">DONE</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>